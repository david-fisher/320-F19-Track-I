{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Execute locally",
        "type": "shell",
        "command": "./scripts/test.sh",
        "windows": {
          "command": "sam local invoke --no-event"
        },
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        }
      },
      {
        "label": "Package",
        "type": "shell",
        "command": "sam package --template-file template.yaml --s3-bucket orchardwatchsandbox --output-template-file packaged.yaml",
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        }
      },
      {
        "label": "Deploy",
        "type": "shell",
        "command": "sam deploy --template-file packaged.yaml --stack-name orchardWatch",
        "group": "build",
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "dependsOn":["Package"]
      },
    ]
  }